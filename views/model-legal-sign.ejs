<!-- FILE: views/model-legal-sign.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= template.title %> – LumenNyx Studios</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .doc-body { background: rgba(255,255,255,0.03); padding: 16px; border-radius: 12px; }
    .doc-body h1, .doc-body h2, .doc-body h3 { margin-top: 0.8rem; }
    .sig-preview { display:flex; gap:14px; align-items:center; flex-wrap:wrap; margin-top: 8px; }
    .sig-preview img { max-height: 72px; background: #fff; border-radius: 8px; padding: 6px; }
  </style>
</head>
<body>
  <header class="site-header">
    <div class="site-header-inner">
      <a href="/" class="brand-link">
        <span class="brand-mark"><img src="/img/lumennyx-mark.png" alt="LumenNyx"></span>
        <span class="brand-text">LUMENNYX STUDIOS</span>
      </a>
      <nav class="main-nav">
        <a href="/model/profile">Model Portal</a>
        <a href="/model/legal" class="active">Legal</a>
        <a href="/model/signature">Signature</a>
        <form action="/logout" method="POST" style="display:inline;">
          <button class="btn secondary" style="padding:0.25rem 0.9rem;font-size:0.8rem;">Logout</button>
        </form>
      </nav>
    </div>
  </header>

  <main class="home" style="max-width: 1000px; margin: 1.5rem auto 2rem auto; padding: 0 1.25rem;">
    <section class="portal-section">
      <h2><%= template.title %></h2>
      <p class="portal-note">
        Version: <span class="mono"><%= template.version %></span>
        <% if (Number(template.required) === 1) { %> • Required <% } %>
      </p>

      <% if (message) { %><div class="alert success"><%= message %></div><% } %>
      <% if (error) { %><div class="alert error"><%= error %></div><% } %>

      <% if (!signature) { %>
        <div class="alert error">
          You must complete your signature first. Please go to <a href="/model/signature">Signature Setup</a>.
        </div>
      <% } %>

      <% if (alreadySigned) { %>
        <div class="alert success">This document is already signed for the current version.</div>
      <% } %>

      <% if (needsResign) { %>
        <div class="alert error">This document has been updated. Please re-sign the latest version.</div>
      <% } %>

      <div class="doc-body" style="margin-top:12px;">
        <%- template.body_html %>
      </div>

      <hr style="margin: 18px 0; opacity:0.2;">

      <h3>Signature & Agreement</h3>

      <% if (signature && signature.signature_png) { %>
        <div class="sig-preview">
          <div>
            <div class="muted">Signature on file</div>
            <% if (String(signature.signature_png).startsWith('data:image')) { %>
              <img src="<%= signature.signature_png %>" alt="Signature">
            <% } else { %>
              <div class="muted mono"><%= signature.signature_png %></div>
            <% } %>
          </div>
          <div class="muted">
            If this is not correct, update it here:
            <a href="/model/signature">Signature Setup</a>
          </div>
        </div>
      <% } %>

      <form method="POST" action="/model/legal/<%= template.slug %>" style="margin-top:12px;">
        <label style="display:flex; gap:10px; align-items:flex-start;">
          <input type="checkbox" name="agree" required>
          <span>
            I have read and agree to the document above. I understand that submitting will generate an executed PDF
            that is stored for studio compliance records.
          </span>
        </label>

        <div style="margin-top: 14px;">
          <button type="submit" class="btn primary" <%= signature ? '' : 'disabled' %>>
            <%= alreadySigned ? 'Re-Generate Executed PDF' : 'Sign & Submit' %>
          </button>
          <a class="btn secondary" href="/model/legal" style="margin-left:8px;">Back</a>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
