<!-- FILE: views/admin/legal-template-edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= template ? 'Edit' : 'New' %> Legal Template – LumenNyx Studios</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    textarea { width: 100%; min-height: 360px; font-family: ui-monospace, Menlo, Consolas, monospace; }
    .row { display:flex; gap:12px; flex-wrap:wrap; }
    .row > label { flex: 1; min-width: 220px; }
    .help { margin-top: 6px; color: rgba(255,255,255,0.75); font-size: 0.9rem; line-height: 1.35; }
    .help .mono { font-family: ui-monospace, Menlo, Consolas, monospace; }
  </style>
</head>

<body class="home" data-is-edit="<%= (template && template.id) ? '1' : '0' %>">
  <header class="site-header">
    <div class="site-header-inner">
      <a href="/studio-panel" class="brand-link">
        <span class="brand-mark"><img src="/img/lumennyx-mark.png" alt="LumenNyx"></span>
        <span class="brand-text">LUMENNYX STUDIOS</span>
      </a>
      <nav class="main-nav">
        <a href="/studio-panel">Studio Panel</a>
        <a href="/studio-panel/legal-templates" class="active">Legal Templates</a>
        <a href="/studio-panel/legal-executed">Signed Legal</a>
        <form action="/logout" method="POST" style="display:inline;">
          <button type="submit" class="btn secondary" style="padding:0.3rem 0.9rem;font-size:0.75rem;">Logout</button>
        </form>
      </nav>
    </div>
  </header>

  <main class="page-wrapper">
    <section class="portal-section">
      <h2><%= template ? 'Edit' : 'New' %> Legal Template</h2>
      <p class="portal-note">
        HTML body is rendered into a “print view” and converted to a signed PDF after the model agrees and submits.
      </p>

      <% if (message) { %><div class="alert success"><%= message %></div><% } %>
      <% if (error) { %><div class="alert error"><%= error %></div><% } %>

      <form method="POST" action="<%= template ? ('/studio-panel/legal-templates/' + template.id) : '/studio-panel/legal-templates/new' %>">
        <div class="row">
          <label>
            Title
            <input id="title" type="text" name="title" value="<%= template ? template.title : '' %>" required>
            <div class="help">
              Public-facing label shown to models.
            </div>
          </label>

          <label>
            Slug (URL id)
            <input id="slug" type="text" name="slug" value="<%= template ? template.slug : '' %>" placeholder="master-release" required>
            <div class="help">
              Used in the model URL: <span class="mono">/model/legal/&lt;slug&gt;</span>
            </div>
          </label>

          <label>
            Version
            <input id="version" type="text" name="version" value="<%= template ? template.version : 'v1' %>" required>
            <div class="help">
              Increment this to require re-signing. Example: <span class="mono">v2</span>
            </div>
          </label>
        </div>

        <div class="row" style="margin-top:10px;">
          <label style="display:flex; gap:10px; align-items:center;">
            <input id="required" type="checkbox" name="required" <%= (!template || Number(template.required) === 1) ? 'checked' : '' %> >
            <span>Required</span>
          </label>

          <label style="display:flex; gap:10px; align-items:center;">
            <input id="active" type="checkbox" name="active" <%= (!template || Number(template.active) === 1) ? 'checked' : '' %> >
            <span>Active</span>
          </label>
        </div>

        <label style="display:block; margin-top:12px;">
          Body HTML
          <textarea id="body_html" name="body_html" required><%= template ? template.body_html : '' %></textarea>
          <div class="field-help">
            Tip: Use simple HTML (headings, paragraphs, lists). This is portal-only content.
            When you change version, models who already signed will be flagged as “needs re-sign”.
          </div>
          <div class="help">
            Allowed tags: <span class="mono">&lt;h1&gt; &lt;h2&gt; &lt;h3&gt; &lt;p&gt; &lt;ul&gt; &lt;ol&gt; &lt;li&gt; &lt;table&gt;</span> etc.
            Avoid remote images/scripts—PDF generation can hang if assets don’t load.
          </div>
        </label>

        <div style="margin-top:12px; display:flex; gap:10px; flex-wrap:wrap;">
          <button type="submit" class="btn primary">Save Template</button>
          <a class="btn secondary" href="/studio-panel/legal-templates">Back</a>
          <% if (template) { %>
            <a class="btn secondary" href="/model/legal/<%= template.slug %>" target="_blank" rel="noopener">Preview as Model</a>
          <% } %>
        </div>
      </form>
    </section>
  </main>

  <script>
    (function () {
      // Robust: avoid embedding EJS in JS.
      var body = document.body;
      var isEdit = body && body.getAttribute('data-is-edit') === '1';
      if (isEdit) return; // only auto-slug on NEW templates

      var title = document.getElementById('title');
      var slug = document.getElementById('slug');
      if (!title || !slug) return;

      var slugTouched = false;
      slug.addEventListener('input', function () { slugTouched = true; });

      function slugify(s) {
        return String(s || '')
          .trim()
          .toLowerCase()
          .replace(/\s+/g, '-')
          .replace(/[^a-z0-9_-]/g, '')
          .replace(/-+/g, '-')
          .replace(/^-+|-+$/g, '')
          .slice(0, 60);
      }

      title.addEventListener('input', function () {
        if (!slugTouched) slug.value = slugify(title.value);
      });
    })();
  </script>
</body>
</html>
