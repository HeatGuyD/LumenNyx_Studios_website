<!-- FILE: views/studio-scene-view.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Scene Detail – <%= scene.title %> – LumenNyx Studios</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="model-portal">
  <header class="site-header">
    <div class="site-header-inner">
      <a href="/studio-panel" class="brand-link">
        <span class="brand-mark">
          <img src="/img/lumennyx-mark.png" alt="LumenNyx sun/moon logo" />
        </span>
        <span class="brand-text">LUMENNYX STUDIOS</span>
      </a>

      <nav class="main-nav">
        <a href="/studio-panel">Studio Panel</a>
        <a href="/studio-panel/models">Models</a>
        <a href="/studio-panel/scenes" class="active">Scenes</a>
        <a href="/2257">2257</a>
        <form action="/logout" method="POST" style="display:inline;">
          <button type="submit" class="btn secondary" style="padding:0.3rem 0.9rem;font-size:0.75rem;">
            Logout
          </button>
        </form>
      </nav>
    </div>
  </header>

  <main class="page-wrapper">
    <section class="portal-section">
      <h3>Scene Details</h3>

      <% if (message) { %>
        <div class="alert success"><%= message %></div>
      <% } %>
      <% if (error) { %>
        <div class="alert error"><%= error %></div>
      <% } %>

      <div class="documents-list" style="margin-top: 10px;">
        <table>
          <tbody>
            <tr>
              <th style="text-align:left; width: 220px;">Title</th>
              <td><%= scene.title %></td>
            </tr>
            <tr>
              <th style="text-align:left;">Internal Code</th>
              <td><%= scene.code || '—' %></td>
            </tr>
            <tr>
              <th style="text-align:left;">Status</th>
              <td><%= scene.status || '—' %></td>
            </tr>
            <tr>
              <th style="text-align:left;">Shoot Date</th>
              <td><%= scene.shoot_date || '—' %></td>
            </tr>
            <tr>
              <th style="text-align:left;">Storage Note</th>
              <td><%= scene.storage_note || '—' %></td>
            </tr>
            <tr>
              <th style="text-align:left;">Video Reference</th>
              <td><%= scene.video_ref || '—' %></td>
            </tr>
            <tr>
              <th style="text-align:left;">Created At</th>
              <td><%= scene.created_at || '—' %></td>
            </tr>
            <tr>
              <th style="text-align:left; vertical-align: top;">Description</th>
              <td style="white-space: pre-wrap;"><%= scene.description || '—' %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div style="margin-top: 14px; display:flex; gap:10px; flex-wrap:wrap;">
        <a class="btn secondary" href="/studio-panel/scenes">Back to Scenes</a>
        <!-- Creation happens on the Scenes list page (POST /studio-panel/scenes/new) -->
        <a class="btn secondary" href="/studio-panel/scenes">Create New Scene</a>
      </div>
    </section>

    <section class="portal-section">
      <h3>Tagged Models</h3>

      <% if (taggedModels && taggedModels.length) { %>
        <div class="documents-list">
          <table>
            <thead>
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Links</th>
              </tr>
            </thead>
            <tbody>
              <% taggedModels.forEach(function(model) { %>
                <tr>
                  <td><%= model.username %></td>
                  <td><%= model.email || '—' %></td>
                  <td>
                    <a class="btn secondary" href="/studio-panel/models/<%= model.id %>" style="font-size:0.8rem;padding:0.25rem 0.8rem;">
                      Inspect
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p>No models are tagged in this scene yet.</p>
      <% } %>
    </section>

    <section class="portal-section">
      <h3>Update Scene Tags</h3>
      <p class="portal-note">
        Select approved models to tag on this scene. Saving replaces the current tag list.
      </p>

      <form method="POST" action="/studio-panel/scenes/<%= scene.id %>/tag" class="portal-form">
        <div class="documents-list">
          <table>
            <thead>
              <tr>
                <th style="width:60px;">Tag</th>
                <th>Username</th>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
              <% 
                const taggedSet = new Set((taggedModels || []).map(m => m.id));
                (models || []).forEach(function(m) { 
              %>
                <tr>
                  <td>
                    <input type="checkbox" name="model_ids" value="<%= m.id %>" <%= taggedSet.has(m.id) ? 'checked' : '' %> />
                  </td>
                  <td><%= m.username %></td>
                  <td><%= m.email || '—' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <button type="submit" class="btn primary" style="margin-top: 12px;">
          Save Tags
        </button>
      </form>
    </section>
  </main>
</body>
</html>
