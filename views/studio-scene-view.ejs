<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Scene Detail – <%= scene.title %> – LumenNyx Studios</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="model-portal">
  <header class="site-header">
    <div class="site-header-inner">
      <a href="/studio-panel" class="brand-link">
        <span class="brand-mark">
          <img src="/img/lumennyx-mark.png" alt="LumenNyx sun/moon logo" />
        </span>
        <span class="brand-text">LUMENNYX STUDIOS</span>
      </a>

      <nav class="main-nav">
        <a href="/studio-panel">Studio Panel</a>
        <a href="/studio-panel/models">Models</a>
        <a href="/studio-panel/scenes" class="active">Scenes</a>
        <a href="/2257">2257</a>
        <form action="/logout" method="POST" style="display:inline;">
          <button type="submit" class="btn secondary" style="padding:0.3rem 0.9rem;font-size:0.75rem;">
            Logout
          </button>
        </form>
      </nav>
    </div>
  </header>

  <main style="max-width: 1100px; margin: 2.5rem auto; padding: 0 1.5rem;">
    <section class="portal-section">
      <h3>Scene Details</h3>

      <p><strong>Title:</strong> <%= scene.title %></p>
      <p><strong>Description:</strong><br /><%= scene.description || '—' %></p>
      <p><strong>Shoot date:</strong> <%= scene.shoot_date || '—' %></p>
      <p><strong>Video reference / file path:</strong> <%= scene.video_ref || '—' %></p>
      <p><strong>Created at:</strong> <%= scene.created_at || '—' %></p>

      <div style="margin-top: 14px; display:flex; gap:10px; flex-wrap:wrap;">
        <a class="btn secondary" href="/studio-panel/scenes">Back to Scenes</a>
        <a class="btn secondary" href="/studio-panel/scenes/new">Create New Scene</a>
        <!-- Optional future route: a single printable “scene packet” page -->
        <!-- <a class="btn primary" href="/studio-panel/scenes/<%= scene.id %>/print" target="_blank" rel="noopener">Print Scene Packet</a> -->
      </div>
    </section>

    <section class="portal-section">
      <h3>Tagged Models</h3>

      <% if (taggedModels && taggedModels.length) { %>
        <div class="documents-list">
          <table>
            <thead>
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Links</th>
              </tr>
            </thead>
            <tbody>
              <% taggedModels.forEach(function(model) { %>
                <tr>
                  <td><%= model.username %></td>
                  <td><%= model.email || '—' %></td>
                  <td>
                    <a class="btn secondary" href="/studio-panel/models/<%= model.id %>">Inspect</a>
                    <!-- After we add the identity route, this becomes valid -->
                    <!-- <a class="btn secondary" href="/studio-panel/models/<%= model.id %>/identity" target="_blank" rel="noopener">Print Identity</a> -->
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p>No models are tagged in this scene yet.</p>
      <% } %>
    </section>
  </main>
</body>
</html>
